<Window x:Class="Front_Running.AboutUs"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Front_Running"
        mc:Ignorable="d"
        Title="AboutUs" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="About the portal" HorizontalAlignment="Left" Margin="105,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="105" Margin="31,71,0,0" TextWrapping="Wrap" Text="This is a portal provided for trading to both general clients and proprietary traders. This portal is connected with a software which detects front running in the trades performed by the proprietary traders." VerticalAlignment="Top" Width="226"/>
        <Button x:Name="button" Content="Close" HorizontalAlignment="Left" Margin="105,181,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
